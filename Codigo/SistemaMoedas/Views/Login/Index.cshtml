@{ViewData["Title"] = "Login";}

@{
    Layout = "_Layout";
}

<div class="container">    
    <div class="form_goup_login" style="margin-top: 12rem">
    <p style="font-size:180%;">Iniciar sessão<p><br>
            <label for="" class="form-label">Tipo</label>
            <select class="form-input" id="selectTipo">
                <option value="1">Aluno</option>
                <option value="2">Professor</option>
                <option value="3">Parceiro</option>
            </select>
            <div class="input-container">
            <input class="form-control" type="email" id="emailInput" placeholder="Usuário" name="usrnm">
                <i class="fa fa-user icon"></i>
            </div>
            <div class="input-container">
            <input class="form-control" type="password" id="senhaInput" placeholder="Senha" name="psw">
                <i class="fa fa-eye icon eye-open" onclick="toggleEye()" id="eyeIcon"></i>
            </div>
        <input class="form-control" id="btn_login" type="submit" value="ENTRAR">
        <a id="cadastro" href="/Cadastro">
                <p style="font-size: 80%;">Não possui conta? <strong>Criar conta</strong></p>
            </a>

            <a id="cadastroParceiro" href="/CadastroParceiro">
                <p style="font-size: 80%;"><strong>Sou empresa parceira</strong></p>
            </a>
    </div>

    @section css{
        <style href="~/css/Style/login.css" src="~/css/Style/login.css"></style>

        <style>
            * {
                font-family: 'Hallway', sans-serif;
            }

            p {
                justify-content: center;
                text-align: center;
                display: block;
                color: #6f42c1;
                font-size: 20px;
            }

            input {
                justify-content: left;
                align-items: left;
                background-color: rgb(255, 255, 255);
                border: 1px solid;
                height: 40px;
                border-color: #6f42c1;
                border-radius: 5px;
                margin-top: 10px;
                margin-inline-start: 10px;
                margin-bottom: 10px;
                width: 350px;
            }

                input[type="email"],
                input[type="text"],
                input[type="password"] {
                    background-color: #ffffff;
                    border: 1px solid #6f42c1;
                    border-radius: 5px;
                    height: 40px;
                    margin-top: 10px;
                    margin-inline-start: 10px;
                    margin-bottom: 10px;
                    width: 350px;
                    padding-left: 10px;
                }

            #btn_login {
                justify-content: center;
                align-items: center;
                line-height: 10px;
                background-color: white;
                border: 1px solid;
                border-radius: 5px;
                height: 40px;
                border-color: #6f42c1;
                margin-top: 10px;
                margin-inline-start: 10px;
                margin-bottom: 10px;
                width: 350px;
                color: #6f42c1;
                transition: background-color 0.5s ease, color 0.5s ease;
            }

                #btn_login:hover {
                    background-color: #6f42c1;
                    color: white;
                }

            .input-container {
                position: relative;
                color: #6f42c1;
            }

            .icon {
                position: absolute;
                right: 0.5em;
                top: 50%;
                transform: translateY(-50%);
                font-size: 1.5em;
                max-width: 24px;
                max-height: 24px;
                color: #6f42c1;
                ;
            }

            .eye-open {
                content: url('/imgs/eye-open.svg');
            }

            .eye-closed {
                content: url('/imgs/eye-closed.svg');
            }

            a {
                text-decoration: none;
            }

            input::placeholder {
                text-align: left;
                padding-left: 4px;
                font-size: 15px;
                color: #6f42c1;
            }

            .ss {
                text-align: right;
                font-size: small;
            }

            .form_goup_login {
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
            }

        </style>
    }

    @section scripts {
  
    <script src="~/js/login.js"></script>
    }
</div>
